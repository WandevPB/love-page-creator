datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Page {
  id        String   @id @default(uuid())
  title     String
  content   String?
  photos    String   // JSON string com array de URLs
  music     String?
  createdAt DateTime @default(now())
}
